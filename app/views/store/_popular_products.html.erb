<h3>Popular Products</h3>
<ul class="popular-products">
  <% @popular_products.each do |popular_product| %>
    <li>
      <h4><%= link_to popular_product.product.name,
                      store_product_path(popular_product.product_id) %></h4>
      <%= link_to(image_tag(popular_product.photo),
                  store_product_path(popular_product.product_id)) %>
      <div class="price-details">
        <div class="price-number">
          <p><span class="rupees line-through">$<%= popular_product.product.price %> </span> &nbsp; <span class="rupees">$<%= popular_product.promotional_price %> </span></p>
        </div>
        <div class="add-cart">
          <h4><%= link_to 'More Info', store_product_path(popular_product.product_id) %></h4>
        </div>
        <div class="clear"></div>
      </div>
    </li>
  <% end %>
</ul>