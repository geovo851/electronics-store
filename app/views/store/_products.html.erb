<h3><%= @category ? @category.title : 'All products'  %></h3>

<% i = 0 %>
<% products.each do |product| %>
  <% i < 4 ? i += 1 : i = 1 %>

  <% if i == 1 %>
    <div class="section group">
  <% end %>

      <div class="grid_1_of_4 images_1_of_4">
        <h4><%= link_to truncate(product.name, length: 60), store_product_path(product) %></h4>

        <%= link_to store_product_path(product) do %>
          <%= image_tag(product.photo) %>
        <% end %>

        <div class="price-details">
          <div class="price-number">
            <p><span class="rupees">$<%= product.price %> </span></p>
          </div>
          <div class="add-cart">
            <h4><%= link_to 'More Info', store_product_path(product) %></h4>
          </div>
          <div class="clear"></div>
        </div>
      </div>

  <% if i == 4 %>
    </div>
  <% end %>

<% end %>
