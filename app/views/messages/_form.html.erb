<%= form_for message do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div>
    <%= f.text_field :name, placeholder: "Name...", class: "textbox textbox1" %>
    <%= f.text_field :email, placeholder: "Email...", class: "textbox"%>
    <%= f.text_field :subject, placeholder: "Subject...", class: "textbox"%>
    <div class="clear"></div>
  </div>

  <div>
    <span><%= f.text_area :message, cols: 10, rows: 15, placeholder: "Message" %></span>
  </div>

  <div>
    <%= f.submit 'Send', class: 'mybutton' %>
    <div class="clear"></div>
  </div>
<% end %>
